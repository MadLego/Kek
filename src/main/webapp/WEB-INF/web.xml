<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>Captcha</servlet-name>
        <servlet-class>com.epam.web.MyCaptcha</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Captcha</servlet-name>
        <url-pattern>/simpleCaptcha.jpg</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>page/main.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>main</servlet-name>
        <jsp-file>/page/main.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>administrator</servlet-name>
        <jsp-file>/page/administrator.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>administrator</servlet-name>
        <url-pattern>/administrator</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/page/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>changeEmployee</servlet-name>
        <jsp-file>/page/changeEmployee.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>changeEmployee</servlet-name>
        <url-pattern>/changeEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>changeFlight</servlet-name>
        <jsp-file>/page/changeFlight.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>changeFlight</servlet-name>
        <url-pattern>/changeFlight</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>newFlight</servlet-name>
        <jsp-file>/page/newFlight.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>newFlight</servlet-name>
        <url-pattern>/newFlight</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>flights</servlet-name>
        <jsp-file>/page/flights.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>flights</servlet-name>
        <url-pattern>/flights</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteFlight</servlet-name>
        <jsp-file>/page/deleteFlight.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteFlight</servlet-name>
        <url-pattern>/listDeleteFlights</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listChangeFlights</servlet-name>
        <jsp-file>/page/changeFlightList.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>listChangeFlights</servlet-name>
        <url-pattern>/listChangeFlights</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>newEmployee</servlet-name>
        <jsp-file>/page/newEmployee.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>newEmployee</servlet-name>
        <url-pattern>/newEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteEmployee</servlet-name>
        <jsp-file>/page/deleteEmployee.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteEmployee</servlet-name>
        <url-pattern>/listDeleteEmployees</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listChangeEmployee</servlet-name>
        <jsp-file>/page/changeEmployeeList.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>listChangeEmployee</servlet-name>
        <url-pattern>/listChangeEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchingFlight</servlet-name>
        <jsp-file>/page/searchingFlight.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>searchingFlight</servlet-name>
        <url-pattern>/searchingFlight</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <jsp-file>/page/registration.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>newCrewList</servlet-name>
        <jsp-file>/page/newCrewList.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>newCrewList</servlet-name>
        <url-pattern>/newCrewList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>newCrew</servlet-name>
        <jsp-file>/page/newCrew.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>newCrew</servlet-name>
        <url-pattern>/newCrew</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>admissionCrew</servlet-name>
        <jsp-file>/page/admissionCrew.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>admissionCrew</servlet-name>
        <url-pattern>/admissionCrew</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/language.tld</taglib-uri>
            <taglib-location>/WEB-INF/language.tld</taglib-location>
        </taglib>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <listener>
        <listener-class>com.epam.listener.ContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>langFilter</filter-name>
        <filter-class>com.epam.filter.LangFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>langFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/flight</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
